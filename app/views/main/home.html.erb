	    renderTrip(stops);
	}

        } else if (type == 'metric') {

          parent.children('.active').removeClass('active');
          $(this).parent().addClass('active');

          showmetric = $(this).data('value');
	if (allStops.length > 0) {
	    renderAllStops(allStops);
	} else {
	    renderTrip(stops);
	}

        }

        return false;
      });

